@page
@model dynamic
@{
    ViewData["Title"] = "Tham gia gia đình";
}

<link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;600&display=swap" rel="stylesheet" />
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

<style>
    body {
        font-family: 'Inter', sans-serif;
        background: linear-gradient(180deg, #f8faff 0%, #eef2fb 100%);
        min-height: 100vh;
    }

    .header-bar {
        background: linear-gradient(90deg, #4c6ef5, #5f8efb);
        border-radius: 12px;
        color: white;
        padding: 1.2rem 1.6rem;
        margin-top: 2rem;
        margin-bottom: 1.5rem;
        box-shadow: 0 3px 10px rgba(0,0,0,0.1);
    }

        .header-bar h3 {
            margin: 0;
            font-weight: 600;
        }

    .form-card {
        background: #fff;
        border-radius: 16px;
        padding: 2rem;
        box-shadow: 0 6px 18px rgba(0, 0, 0, 0.06);
        max-width: 550px;
        margin: auto;
    }

    .form-control {
        border-radius: 10px;
        padding: 0.75rem;
        transition: 0.25s ease;
    }

        .form-control:focus {
            border-color: #4c6ef5;
            box-shadow: 0 0 0 0.25rem rgba(76, 110, 245, 0.15);
        }

    .btn-primary {
        background: linear-gradient(90deg, #4c6ef5, #5f8efb);
        border: none;
        font-weight: 600;
    }

        .btn-primary:hover {
            background: linear-gradient(90deg, #3b5bdb, #4263eb);
        }

    .btn-secondary {
        font-weight: 500;
    }
</style>

<div class="container">
    <div class="header-bar d-flex justify-content-between align-items-center">
        <h3>🔑 Tham gia gia đình bằng mã</h3>
        <a href="/Dashboard/Index" class="btn btn-light btn-sm shadow-sm">⬅ Quay lại</a>
    </div>

    <div class="form-card">
        <form id="joinForm">
            <div class="mb-3">
                <label for="familyCode" class="form-label">Mã gia đình <span class="text-danger">*</span></label>
                <input type="text" id="familyCode" class="form-control" required placeholder="VD: FAM001" />
            </div>
            <div class="d-flex gap-2 mt-4">
                <button type="submit" class="btn btn-primary w-100">🚪 Tham gia</button>
                <a href="/Dashboard/Index" class="btn btn-secondary w-50">⬅ Quay lại</a>
            </div>
        </form>
    </div>
</div>

<script>
    const token = localStorage.getItem("token");
    if (!token) window.location.href = "/Auth/Login";

    document.getElementById("joinForm").addEventListener("submit", async e => {
        e.preventDefault();
        const code = document.getElementById("familyCode").value.trim();

        if (!code) {
            Swal.fire({
                icon: "warning",
                title: "Thiếu mã gia đình!",
                text: "Vui lòng nhập mã để tham gia.",
                confirmButtonColor: "#4c6ef5"
            });
            return;
        }

        try {
            const res = await fetch("https://localhost:7145/api/Families/join", {
                method: "POST",
                headers: {
                    "Content-Type": "application/json",
                    "Authorization": `Bearer ${token}`
                },
                body: JSON.stringify({ familyCode: code })
            });

            if (res.ok) {
                Swal.fire({
                    icon: "success",
                    title: "🎉 Tham gia thành công!",
                    text: "Bạn đã trở thành thành viên của gia đình.",
                    confirmButtonColor: "#4c6ef5"
                }).then(() => window.location.href = "/Dashboard/Index");
            } else {
                const err = await res.json().catch(() => ({}));
                Swal.fire({
                    icon: "error",
                    title: "❌ Tham gia thất bại!",
                    text: err.message || "Mã gia đình không hợp lệ hoặc đã tồn tại.",
                    confirmButtonColor: "#d33"
                });
            }
        } catch (err) {
            Swal.fire({
                icon: "error",
                title: "Lỗi kết nối!",
                text: "Không thể kết nối tới máy chủ.",
                confirmButtonColor: "#d33"
            });
        }
    });
</script>
