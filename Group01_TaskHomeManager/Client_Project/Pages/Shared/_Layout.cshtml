@using Microsoft.AspNetCore.Http
@inject IHttpContextAccessor HttpContextAccessor

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Family Tasks</title>

    <!-- Google Font -->
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;600;700&display=swap" rel="stylesheet">

    <!-- Bootstrap -->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />

    <!-- Bootstrap Icons -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">

    <!-- Custom CSS -->
    <style>
        body {
            font-family: 'Inter', sans-serif;
            background: #f7f9fc;
        }

        .navbar-custom {
            background: white;
            border-radius: 12px;
            padding: 14px 28px;
            margin-top: 15px;
            box-shadow: 0 4px 16px rgba(0,0,0,0.06);
        }

        .navbar-brand {
            font-weight: 700;
            font-size: 20px;
            color: #4C6EF5 !important;
        }

        .nav-link {
            font-size: 15px;
            font-weight: 500;
            color: #333 !important;
            margin-right: 14px;
            transition: .2s;
        }

            .nav-link:hover {
                color: #4C6EF5 !important;
            }

        footer {
            margin-top: 40px;
            padding: 20px 0;
            background: white;
            border-top: 1px solid #e6e6e6;
            text-align: center;
        }

        main {
            margin-top: 30px;
        }
    </style>
</head>

<body>
    <div class="container">

        <!-- 🔹 CHỈ HIỂN THỊ NAVBAR nếu KHÔNG ở trang /Auth/... -->
        @if (!HttpContextAccessor.HttpContext.Request.Path.Value.StartsWith("/Auth"))
        {
            <nav class="navbar navbar-expand-lg navbar-custom">
                <a class="navbar-brand" asp-area="" asp-page="/Index">
                    <i class="bi bi-house-heart-fill me-1"></i> Family Tasks
                </a>

                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav ms-auto">
                        <li class="nav-item">
                            <a class="nav-link" asp-page="/Dashboard/Index">
                                <i class="bi bi-grid"></i> Dashboard
                            </a>
                        </li>


                        <li class="nav-item">
                            <a class="nav-link" asp-page="/Calendar/Index">
                                <i class="bi bi-grid"></i> Calendar
                            </a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link" asp-page="/Dashboard/Profile">
                                <i class="bi bi-grid"></i> Profile
                            </a>
                        </li>
                      
                    </ul>

                </div>
            </nav>
        }

        <main role="main">
            @RenderBody()
        </main>
    </div>

    <!-- 🔹 CHỈ HIỂN THỊ FOOTER nếu KHÔNG ở trang /Auth/... -->
    @if (!HttpContextAccessor.HttpContext.Request.Path.Value.StartsWith("/Auth"))
    {
        <footer>
            &copy; 2025 - Family Tasks Manager | Made with ❤️ for gia đình
        </footer>
    }

    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
